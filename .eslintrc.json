{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn", "never"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-empty": [
            "warn"
        ],
        "comma-dangle": [
            "warn",
            "never"
        ],
        "comma-spacing": [
            "warn",
            {
                "before": false,
                "after": true
            }
        ]
    }
}
