<%- include("partials/header", { bot, user, path, title: "Select server" }) %>

<div style="display: flex; flex-wrap: wrap; justify-content: center;">
  <% user.guilds.forEach(guild => {
      const permsOnGuild = new perms(guild.permissions);
      if(!permsOnGuild.has("MANAGE_GUILD")) return;
  %>

    <div class="card" style="max-width: 18rem; margin: 2rem; min-width: 10em; border-radius: 30px;">
    <%- guild.icon ? `<img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon.startsWith('a_') ? guild.icon + '.gif' : guild.icon}" class="card-img-top" style="max-width: 18rem; border-radius: 30px 30px 0px 0px;">` : "" %>
      <div class="card-body">
        <center><h5 class="card-title"><%= guild.name %></h5>
        <% if (bot.guilds.cache.get(guild.id)) { %>
          <p class="card-text">â˜€ï¸ Edytuj opcje na serwerze</p>
          <a href="/dashboard/<%- guild.id %>" class="btn btn-success text-white" style="border-radius: 30px;">ğŸ§° Opcje</a>
        <% } else { %>
          <p class="card-text">ğŸŒ¥ï¸ ZaproÅ› bota na serwer</p>
          <a href="<%= `https://discordapp.com/oauth2/authorize?client_id=${bot.myID}&scope=bot&guild_id=${guild.id}&response_type=code&redirect_uri=${encodeURIComponent(`${bot.config.dashboard.domain}${bot.config.dashboard.port == 80 ? "" : `:${bot.config.dashboard.port}`}/callback`)}` %>" class="btn btn-primary text-white" style="border-radius: 30px">ğŸš ZaproÅ› bota</a></center>
        <% } %>
      </div>
    </div>
  <%
      });
  %>
</div>

